<BorderPane id="background" fx:id="rootPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dvtrung.sound.controller.MainController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <ToolBar>
                    <items>
                        <Button contentDisplay="CENTER" graphicTextGap="0.0" onAction="#handleOpenWaveFileAction" text="Open" />
                        <Region styleClass="spacer" />
                        <Button onAction="#handlePlay" text="Play" />
                        <Button layoutX="69.0" layoutY="10.0" onAction="#handlePause" text="Pause" />
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.3" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <VBox maxWidth="300" prefWidth="100.0" spacing="10.0">
                    <children>
                        <TitledPane text="General">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Position" />
                                        <HBox>
                                            <Slider fx:id="posSlider" max="0.0" prefWidth="500.0" HBox.hgrow="ALWAYS" />
                                            <VBox.margin>
                                                <Insets />
                                            </VBox.margin>
                                        </HBox>
                                        <HBox>
                                            <Label text="Frame Duration: " />
                                            <Label fx:id="textFrameDuration"></Label>
                                            <Label text=" ms " />
                                            <Button onAction="#handleChangeFrameDuration" text="Change" />
                                        </HBox>
                                        <Separator />
                                        <GridPane alignment="CENTER_LEFT">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" prefWidth="100.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <Label text="Loudness" GridPane.rowIndex="0" />
                                            <Label fx:id="loudnessLabel" text="30dB" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                            <Label text="Fundamental Frequency" GridPane.rowIndex="1" />
                                            <Label fx:id="fundamentalFrequencyLabel" text="400Hz" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                            <Label text="Vowel" GridPane.rowIndex="2" />
                                            <Label fx:id="vowelLabel" text="none" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                            <columnConstraints>
                                                <ColumnConstraints />
                                                <ColumnConstraints />
                                                <ColumnConstraints />
                                    <ColumnConstraints />
                                    <ColumnConstraints />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                            </rowConstraints>
                                        </GridPane>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>
                        <TitledPane text="Chart">
                            <VBox fx:id="checkBoxPane" spacing="5">
                                <children>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </VBox>
                        </TitledPane>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
                <VBox>
                    <children>
                        <VBox fx:id="chartPane" />
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <HBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="statusLabel" text="Ready" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
